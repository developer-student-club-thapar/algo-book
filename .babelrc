{
    "presets": [
        ["@babel/preset-env", { "modules": false }],
        "@babel/preset-react"
    ],
    "plugins": [
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-syntax-dynamic-import",
        "babel-plugin-transform-html-import-require-to-string",

        [
            "prismjs",
            {
                "languages": [
                    "javascript",
                    "cpp",
                    "java",
                    "go",
                    "nim",
                    "python",
                    "c",
                    "markdown"
                ],
                "css": true,
                "theme": "okaidia",
                "plugins": ["line-numbers"]
            }
        ]
    ]
}
